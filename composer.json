{
    "name": "sven/laravel-collection-testing-macros",
    "description": "Convenience methods on your Laravel collections for testing",
    "keywords": ["laravel", "collections", "testing", "phpunit", "helpers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Luijten",
            "email": "contact@svenluijten.com",
            "homepage": "https://svenluijten.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpunit/phpunit": "^9.0",
        "illuminate/collections": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Sven\\LaravelCollectionTestingHelpers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sven\\LaravelCollectionTestingHelpers\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
